<script>
    document.addEventListener("DOMContentLoaded", function () {
      var temperatureCellsBegon = document.querySelectorAll('.temperature-begonia td');

      temperatureCellsBegon.forEach(function (cell) {
        var temperature = parseFloat(cell.innerText);
        if (temperature >= 13 && temperature <= 22) {
          cell.classList.add('temperature-green');
        } else {
          cell.classList.add('temperature-red');
        }
      });
    });

